<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="cl.hospital.main">
	<class name="User" table="user" >
		<id name="userid" >
			<generator class="native" />          <!-- 设置主键id，自增 -->
		</id>
		<property name="typeid" />
		<property name="deid" />
		<property name="username"  length="20"/>
		<property name="password" length="20"/>
		<property name="answer" length="100"/>
		<property name="question" length="200"/>
		<property name="sex" length="10"/>
		<property name="number" length="50" />
		<property name="phone" length="20"/>
		<property name="mail" length="50" />
		<property name="address" length="500"/>
		 
	</class>            
</hibernate-mapping>
